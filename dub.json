{
    "name": "eu4dll",
    "authors": [
        "hiroyuki nagata"
    ],
    "description": "This dll makes it possible to display double-byte characters on Europa Universalis IV.",
    "copyright": "Copyright Â© 2020, hiroyuki nagata",
    "license": "MIT",
    "configurations": [
        {
            "name": "eu4dll",
            "targetName": "eu4dll",
            "targetType": "dynamicLibrary",
            "sourcePaths": [
                "source/"
            ],
            "dependencies": {
                "scriptlike": "~>0.10.3",
                "elf-d": "~>0.2.5",
                "cerealed": "~>0.6.11"
            }
        },
        {
            "name": "eu4dll-poc",
            "targetName": "eu4dll-poc",
            "targetType": "dynamicLibrary",
            "targetPath": "tests/poc/",
            "sourceFiles": [
                "tests/poc/dllmain.d"
            ],
            "excludedSourceFiles": [
                "source/plugin/dllmain.d",
                "tests/plugin/*.d"
            ],
            "dependencies": {
                "scriptlike": "~>0.10.3",
                "elf-d": "~>0.2.5",
                "cerealed": "~>0.6.11",
                "fluent-asserts": "~>0.13.3"
            }
        },
        {
            "name": "unittest",
            "targetType": "executable",
            "targetPath": "tests",
            "mainSourceFile": "tests/test_runner_main.d",
            "sourcePaths": [
                "source/",
                "tests/plugin/"
            ],
            "importPaths": [
                "tests/"
            ],
            "dependencies": {
                "scriptlike": "~>0.10.3",
                "cerealed": "~>0.6.11",
                "elf-d": "~>0.2.5",
                "fluent-asserts": "~>0.13.3"
            },
            "excludedSourceFiles": [
                "tests/poc/dummy.d",
                "source/plugin/dllmain.d"
            ]
        }
    ]
}
